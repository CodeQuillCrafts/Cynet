generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model participants {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  course              String
  name                String
  email               String
  phone               String
  transactionId       String?
  receiptPath         String?
  eventSelect         String[]
  members             String[]
  isTransactionVerify Boolean  @default(false)
  createdAt           DateTime @default(now())
}

model admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  password String
}
